# API Configuration
# Generate a secure API key for your FastAPI server
# IMPORTANT: This is loaded from .env in local dev, NEVER commit to git
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIDER_API_KEY=change_this_to_a_strong_key

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Environment (development, staging, production)
ENVIRONMENT=development

# API Base URL (used by frontend)
# Leave empty for local development to support both localhost and 127.0.0.1
# Production: https://your-domain.com
API_BASE_URL=

# Repository Configuration
# Base directory where all repositories will be stored
ALLOWED_BASE_PATH=C:/Users/batal/OneDrive/Documents/GitHub/ai

# Database Configuration
DATABASE_URL=sqlite:///./aider.db

# Aider Configuration  
# Maximum seconds to let aider run before timing out
AIDER_TIMEOUT_SECONDS=300

# Git Branch Management
AUTO_CREATE_BRANCH=true
BRANCH_PREFIX=feature/aider
AUTO_PUSH_BRANCH=false

# GitHub Integration
PUSH_TO_ORIGIN=true
CREATE_PULL_REQUEST=true
PR_TARGET_BRANCH=master

# CI/CD Integration
WAIT_FOR_CI=true
CI_WAIT_TIMEOUT_MINUTES=10
CHECK_RUNNING_WORKFLOWS=true
WORKFLOW_WAIT_TIMEOUT_MINUTES=5

# External APIs
# OpenAI API Key for Aider
OPENAI_API_KEY=sk-your_openai_key_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
